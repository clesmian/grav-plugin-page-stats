var ctx = document.getElementById("chart_hits").getContext("2d");
var myChart = new Chart(ctx, {
    type: "line",
    options: {
        plugins: {
            legend: {
            display: false
            }
        },
        scales: {
            y: {
                beginAtZero: true
            }
        }
    },
    data: {
        datasets: [
            {
                label: 'Page Views',
                data: [
                    {% for s in siteStats.hits %}
                        {
                                        x: "{{ s.date }}",
                                        y: {{ s.hits }}
                        },
                    {% endfor %}
                ]
            }
        ]
    }
});


