{% extends 'partials/base.html.twig' %}

{% block messages %}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% do assets.addCss('https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css') %}

    <style>
        a {
            text-decoration: none !important
        };
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% do assets.addJS('https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.8.0/chart.min.js') %}

{% endblock %}

{% block titlebar %}

    <div class="button-bar">

        <div class="button-group">
            <p>
                Using:
                {{ stats.dbStats.path }}
                ({{ stats.dbStats.mb }}
                MB)
            </p>
        </div>
    </div>


    <h1>
        <i class="fa fa-fw fa-line-chart"></i>
        Page Stats
    </h1>

{% endblock %}


{% block content %}
    {% set conf = config.plugins['page-stats'] %}
    {% include 'partials/messages.html.twig' %}
    <div class="container-fluid">
        <div class="row">
            {% if conf.show_page_views_widget %}
                <div class="mb-5 col-{{ conf.cols_page_views_widget }}">
                    <h5>Page Views</h5>
                    <div style="width: w-100">
                        <canvas id="chart_hits"></canvas>
                    </div>
                </div>
            {% endif %}
            {% if conf.show_unique_visitors_widget %}
                <div class="mb-5 col-{{ conf.cols_unique_visitors_widget}}">
                    <h5>Unique Visitors</h5>
                    <div style="width: w-100">
                        <canvas id="chart_ips"></canvas>
                    </div>
                </div>
            {% endif %}

            {% if conf.show_unique_users_widget %}
                <div class="mb-5 col-{{ conf.cols_unique_users_widget }}">
                    <h5>Unique Users</h5>
                    <div style="width: w-100">
                        <canvas id="chart_users"></canvas>
                    </div>
                </div>
            {% endif %}

            {% if conf.show_top_users_widget %}
                <div class="mb-5 col-{{ conf.cols_top_users_widget }}">
                    <h5>Top Users</h5>
                    <table class="table">
                        <tr>
                            <th>User</th>
                            <th>Page Views</th>
                        </tr>
                        {% for s in stats.topUsers(conf.limit_top_users_widget) %}
                            <tr>
                                <td>{{ s.user }}</td>
                                <td>{{ s.hits }}</td>
                            </tr>
                        {% endfor %}
                    </table>
                </div>
            {% endif %}

            {% if conf.show_top_countries %}
                <div class="mb-5 col-{{ conf.cols_top_countries }}">
                    <h5>Top Countries</h5>
                    <table class="table">
                        <tr>
                            <th>Country</th>
                            <th>Page Views</th>
                        </tr>
                        {% for s in stats.topCountries(conf.limit_top_countries) %}
                            <tr>
                                <td><img src="https://flagcdn.com/24x18/{{ s.country|lower }}.png">
                                    {{ s.country }}</td>
                                <td>{{ s.hits }}</td>
                            </tr>
                        {% endfor %}
                    </table>
                </div>
            {% endif %}

            {% if conf.show_top_browsers %}
                <div class="mb-5 col-{{ conf.cols_top_browsers }}">
                    <h5>Top Browsers</h5>
                    <table class="table">
                        <tr>
                            <th>Browser</th>
                            <th>% share</th>
                            <th>Page Views</th>
                        </tr>
                        {% for s in stats.topBrowsers(conf.limit_top_browsers) %}
                            <tr>
                                <td>
                                    {{ s.browser }}</td>
                                <td>{{ s.share }}%</td>
                                <td>{{ s.hits }}</td>
                            </tr>
                        {% endfor %}
                    </table>
                </div>

            {% endif %}

            {% if conf.show_top_platforms %}
                <div class="mb-5 col-{{ conf.cols_top_platforms }}">
                    <h5>Top Platforms</h5>
                    <table class="table">
                        <tr>
                            <th>Platform</th>
                            <th>% share</th>
                            <th>Page Views</th>
                        </tr>
                        {% for s in stats.topPlatforms(conf.limit_top_platforms) %}
                            <tr>
                                <td>
                                    {{ s.platform }}</td>
                                <td>{{ s.share }}%</td>
                                <td>{{ s.hits }}</td>
                            </tr>
                        {% endfor %}
                    </table>
                </div>
            {% endif %}

            {% if conf.show_recently_viewed_pages %}
                <div class="col-{{ conf.cols_recently_viewed_pages }}">
                    <h5>Recently Viewed Pages</h5>
                    <table class="table">
                        <tr>
                            <th>Date</th>
                            <th>Page</th>
                            <th>user</th>
                            <th>Location</th>
                            {# <th>Views</th> #}
                        </tr>
                        {% for s in stats.recentPages(conf.limit_recently_viewed_pages) %}
                            <tr>
                                <td>{{s.date|date}}</td>
                                <td>
                                    <a class="me-2" title="view page" target="blank" href="{{ s.route }}">
                                        <i class="fa fa-external-link"></i>
                                    </a>
                                    <span title="{{s.route}}">{{s.page_title}}</span>
                                </td>
                                <td>{{s.user|default(s.ip)}}</td>
                                <td>{{s.city}}
                                    -
                                    {{ s.country}}</td>
                                {# <td>{{s.hits}}</td> #}
                            </tr>
                        {% endfor %}
                    </table>
                </div>
            {% endif %}

            {% if conf.show_top_pages %}
                <div class="col-{{ conf.cols_top_pages }}">
                    <h5>Most Viewed Pages</h5>
                    <table class="table">
                        <tr>
                            <th>Page</th>
                            <th>Views</th>
                            <th>Unique visitors</th>
                            <th>Unique logged in Users</th>
                        </tr>

                        {% for s in stats.pagesSummary(conf.limit_top_pages_pages) %}
                            <tr>
                                <td>
                                    <a class="me-2" title="view page" target="blank" href="{{ s.route }}">
                                        <i class="fa fa-external-link"></i>
                                    </a>

                                    <span title="{{s.route}}">{{s.page_title}}</span>
                                </td>

                                <td>{{s.hits}}</td>
                                <td>{{s.visitors}}</td>
                                <td>{{s.users}}</td>
                            </tr>
                        {% endfor %}
                    </table>
                </div>
            {% endif %}
        </div>
    </div>


    {% set siteStats = stats.siteSummary%}
    <script>{% include 'partials/charts.html.twig' %}</script>
{% endblock %}
