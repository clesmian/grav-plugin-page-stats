{% extends 'partials/base.html.twig' %}
{% block messages %}{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    {% do assets.addCss('https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css') %}
    <style>
        a {
            text-decoration: none !important
        };
    </style>
{% endblock %}

{% block titlebar %}
    <div class="button-bar">
        <div class="button-group">
            <p>
                Using:


                {{ stats.dbStats.path }}
                (

                {{ stats.dbStats.mb }}
                MB)


            </p>
        </div>
    </div>
    {% block pageTitle %}
        <h1>
            <i class="fa fa-fw fa-line-chart"></i>
            Page Stats


        </h1>
    {% endblock %}
{% endblock %}
{% block content %}
    {% set conf = config.plugins['page-stats'] %}
    {% set siteStats = stats.siteSummary %}
    {% include 'partials/messages.html.twig' %}
    <div class="container-fluid">
        <div class="row">
            {% if conf.show_page_views_widget %}
                {% include 'widgets/page-views.html.twig' with {'data': siteStats.hits} %}
            {% endif %}
            {% if conf.show_unique_visitors_widget %}
                {% include 'widgets/unique-visitors.html.twig'with {'data': siteStats.visitors} %}
            {% endif %}
            {% if conf.show_unique_users_widget %}
                {% include 'widgets/unique-users.html.twig' with {'data': siteStats.users} %}
            {% endif %}
            {% if conf.show_top_users_widget %}
                {% include 'widgets/top-users.html.twig' with {'data': stats.topUsers(conf.limit_top_users_widget)} %}
            {% endif %}
            {% if conf.show_top_countries %}
                {% include 'widgets/top-countries.html.twig' with {'data': stats.topCountries(conf.limit_top_countries)} %}
            {% endif %}
            {% if conf.show_top_browsers %}
                {% include 'widgets/top-browsers.html.twig' with {'data': stats.topBrowsers(conf.limit_top_browsers)} %}
            {% endif %}
            {% if conf.show_top_platforms %}
                {% include 'widgets/top-platforms.html.twig' with {'data': stats.topPlatforms(conf.limit_top_platforms)} %}
            {% endif %}
            {% if conf.show_recently_viewed_pages %}
                {% include 'widgets/recently-viewed-pages.html.twig' with {'data': stats.recentPagesByDay(conf.limit_recently_viewed_pages)}  %}
            {% endif %}
            {% if conf.show_top_pages %}
                <div class="col-{{ conf.cols_top_pages }}">
                    <h5>
                        Most Viewed Pages

                    </h5>
                    <table class="table">
                        <tr>
                            <th>
                                Page

                            </th>
                            <th>
                                Views

                            </th>
                            <th>
                                Unique visitors

                            </th>
                            <th>
                                Unique logged in Users

                            </th>
                        </tr>
                        {% for s in stats.pagesSummary(conf.limit_top_pages_pages) %}
                            <tr>
                                <td>
                                    <a class="me-2" title="view page" target="blank" href="{{ s.route }}">
                                        <i class="fa fa-external-link"></i>
                                    </a>
                                    <a class="me-2" title="view page stats" href="page-details?page={{ s.route }}" title="{{ s.route }}">
                                        <i class="fa fa-fw fa-line-chart"></i>
                                    </a>
                                    {{ s.page_title }}
                                </td>
                                <td>
                                    {{ s.hits }}
                                </td>
                                <td>
                                    {{ s.visitors }}
                                </td>
                                <td>
                                    {{ s.users }}
                                </td>
                            </tr>
                        {% endfor %}
                    </table>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
