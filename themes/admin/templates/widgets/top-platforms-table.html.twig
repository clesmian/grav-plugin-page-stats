<div class="mb-5 {{ conf.cols_top_platforms }}">
    <h5>
        Top Platforms

    </h5>
    <table class="table table-hover">
        <tr>
            <th>
                Platform

            </th>
            <th>
                % share
            </th>
        </tr>
        {% for s in data %}
            <tr>
                <td>
                    {{ s.platform }}
                </td>
                <td>
                    <span title="{{s.hits}}">{{ s.share }} %</span>
                </td>
            </tr>
        {% endfor %}
    </table>
</div>
